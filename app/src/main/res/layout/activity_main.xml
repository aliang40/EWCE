<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToNotif"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/topNavBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@android:color/holo_blue_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleBar" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/titleBar"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_green_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/home"
        android:textColor="#004D40"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="goToNotif"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/topNavBar"
        app:layout_constraintStart_toStartOf="@+id/topNavBar"
        app:layout_constraintTop_toTopOf="@+id/topNavBar"
        app:srcCompat="@android:drawable/ic_popup_reminder"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/homebuttn"
        android:layout_width="74dp"
        android:layout_height="64dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/topNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topNavBar"
        app:srcCompat="@drawable/icons8_home_48"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/menubutton"
        android:layout_width="77dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/topNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topNavBar"
        app:srcCompat="@drawable/icons8_menu_48"
        tools:ignore="SpeakableTextPresentCheck" />

</android.support.constraint.ConstraintLayout>